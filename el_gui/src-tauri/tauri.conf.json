{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Execution Lab",
  "version": "0.1.0",
  "identifier": "com.hellaraze.executionlab",
  "build": {
    "frontendDist": "../ui"
  },
  "app": {
    "windows": [
      {
        "title": "Execution Lab",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }

  ,"plugins": {
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": ["https://github.com/hellaraze/execution-lab/releases/download/v{{current_version}}/update.json"],
      "pubkey": "REPLACE_WITH_TAURI_UPDATER_PUBLIC_KEY"
    }
  }

}
